@model IList<BookDriver>
@{
    ViewData["Title"] = "BookDriver";
}

<h1>Cabiee Driver's List</h1>

   <table class="table table-striped">
        <tr>
            <th>Vehicles</th>
           
            <th>DriverName</th>
            <th>CabNumber</th>
            <th>Contact</th>
            <th>Languages</th>
            <th>Charge</th>
            <th>Summary</th>
        </tr>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Vehicles</td>
             
                <td>@movie.DriverName</td>
                <td>@movie.CabNumber</td>
                <td>@movie.Contact</td>
                <td>@movie.Languages</td>
                <td>@movie.Charge</td>
                <td>@movie.Summary</td>
           
             <td>     
                    <div class="btn-group ms-auto">
                    <a asp-action="Payment" asp-route-id="@movie.Id" class="btn btn-primary">Book Driver & Pay</a>
                </div>
            </td>
            </tr>
        }
  
   </table>





