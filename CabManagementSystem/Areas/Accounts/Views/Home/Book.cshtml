@{
}
@model BookViewModel
@{
    ViewData["Title"] = "Book";
}






  


<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://images.unsplash.com/photo-1613638377394-281765460baa?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8NXx8dGF4aXxlbnwwfHwwfHw%3D&auto=format&fit=crop&w=600&q=60"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5"><center>BOOK CAB RIDE</center></h3>
          <form method="post">


                    <div>
                        <label asp-for="PickUp"></label>
                        <select asp-for="PickUp" asp-items="@Html.GetEnumSelectList< Location>()" class="form-control">
                            <option>--- Select PickUp Place---</option>
                        </select>
                        <span asp-validation-for="PickUp" class="text-danger"></span>
                        
                    </div>
                    <div>
                        <label asp-for="DropDown"></label>
                        <select asp-for="DropDown" asp-items="@Html.GetEnumSelectList< Location>()" class="form-control">
                            <option>--- Select DropDown Place---</option>
                        </select>
                        <span asp-validation-for="DropDown" class="text-danger"></span>

                    </div>
                    <div>
                        <label asp-for="Vehicle"></label>
                        <select asp-for="Vehicle" asp-items="@Html.GetEnumSelectList<Vehicles>()" class="form-control">
                            <option>--- Select type of vehicle---</option>
                        </select>
                        <span asp-validation-for="Vehicle" class="text-danger"></span>

                    </div>
                    <div>
                        <label asp-for="Date"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                   
                    
                    <div class="d-grid mt-4">
                    <button class="btn btn-primary">Book</button>
                        <div asp-validation-summary="ModelOnly" asp-controller="Home" asp-area="Accounts" class="text-danger" ></div>
                </div>
              
                
  
          </form>
        </div>
      </div>
    </div> 
  </section>


